$('.<%= "#{@commentable.class.name.downcase}" %>-comment-errors').html('<%= render 'shared/errors', resource: @comment %>')

<% if @comment.persisted? %>
  $('#comments-list').append('<%= j render @comment %>')
  $('#add-comment-body').val('')
  $('#add-comment-form').addClass('hidden')
  $('#add-comment').removeClass('hidden')
<% end %>