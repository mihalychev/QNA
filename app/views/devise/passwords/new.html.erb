<h2 class='text-center mb-5'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'd-flex flex-column align-items-center', method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="w-50 d-flex flex-column mb-4">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg mb-3' %>

  <%= render "devise/shared/links" %>
<% end %>
